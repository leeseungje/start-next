{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["app/_components/*"],
      "@/api/*": ["app/api/*"],
      "@/utils/*": ["app/utils/*"],
      "@/types/*": ["app/types/*"],
      "@/recoils/*": ["app/recoils/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@/constants/*": ["app/constants/*"],
      "@/pages/*": ["app/pages/*"]
    },
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "next.config.mjs", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}

